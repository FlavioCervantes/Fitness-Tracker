<!-- Header partial for Fitness Tracker -->
<header class="bg-light py-3 border-bottom">
  <div class="container">
    <div class="d-flex justify-content-between align-items-center">
      <h1 class="h3 mb-0">Fitness Tracker</h1>
      <div>
        <% if (typeof user !== 'undefined' && user) { %>
          <span class="text-muted">Signed in as <strong><%= user.name || user.userName || user.email || user.userEmail %></strong></span>
        <% } %>
      </div>
    </div>
  </div>
</header>